CC=gcc 
CFLAGS=-std=c99 -pedantic -pedantic-errors -Werror -Wall -Wextra

all: args arr_ptr arrays basics bits boolean do_while expr hello odd range sizeof strings structs switch typedef unions

basics: basics.c
bits: bits.c
boolean: boolean.c
do_while: do_while.c
expr: expr.c
hello: hello.c
odd: odd.c
range: range.c
sizeof: sizeof.c
strings: strings.c
structs: structs.c
switch: switch.c
typedef: typedef.c
unions: unions.c

clean:
	rm -f args
	rm -f arr_ptr
	rm -f arrays
	rm -f basics
	rm -f bits
	rm -f boolean
	rm -f do_while
	rm -f expr
	rm -f hello
	rm -f odd
	rm -f range
	rm -f sizeof
	rm -f strings
	rm -f structs
	rm -f switch
	rm -f typedef
	rm -f unions
